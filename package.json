{
  "version": "1.0.0",
  "name": "hyperapp-examples",
  "description": "Hyperapp PWA boilerplate",
  "author": "Alexandre Lotte",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html --out-dir public --open",
    "build": "parcel build ./src/index.html --no-source-maps --out-dir public --detailed-report",
    "server": "parcel build ./src/server.js --target node --no-minify --out-dir public --no-source-maps --detailed-report --no-content-hash && node ./public/server.js"
  },
  "dependencies": {
    "hyperapp": "github:jorgebucaran/hyperapp#V2",
    "hyperapp-render": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "parcel-bundler": "^1.11.0",
    "postcss-nested": "^4.1.1",
    "rucksack-css": "^1.0.2"
  }
}
